<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lixue.aibei.artdevelopments" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".chapter_1.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="standard" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".chapter_1.SecondActivity"
            android:configChanges="screenLayout"
            android:label="@string/title_activity_second"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="com.lixue.chapter_1.SecondActivity" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.lixue.second"></category>

                <data android:mimeType="text/plain" android:host="file://abc"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".chapter_1.ThirdActivity"
            android:configChanges="screenLayout"
            android:label="@string/title_activity_third"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="com.lixue.charpter_1.c" />
                <action android:name="com.lixue.charpter_1.d" />

                <category android:name="com.lixue.category.c" />
                <category android:name="com.lixue.category.d" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
    </application>

</manifest>
